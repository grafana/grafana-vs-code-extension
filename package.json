{
  "name": "grafana-vscode",
  "author": "Grafana Labs",
  "displayName": "VS Code Extension for Grafana",
  "description": "A Visual Studio Code extension for Grafana",
  "version": "0.0.2",
  "license": "Apache-2.0",
  "repository": "github:grafana/grafana-vs-code-extension",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "grafana-vscode.openUrl",
        "title": "Edit in Grafana"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "grafana-vscode.openUrl",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "grafana-vscode.openUrl"
        }
      ]
    },
    "configuration": {
      "title": "Grafana VS Code Extension",
      "properties": {
        "grafana-vscode.URL": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Grafana instance URL"
        },
        "grafana-vscode.token": {
          "type": "string",
          "default": "",
          "description": "A Service Account token"
        },
        "grafana-vscode.message": {
          "type": "boolean",
          "default": "true",
          "description": "Show popup message when dashboard JSON is detected"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/http-proxy": "^1.17.10",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "http-proxy": "^1.18.1",
    "http-proxy-middleware": "^2.0.6",
    "open": "^8.4.2"
  }
}
